unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, VclTee.TeeGDIPlus, VclTee.TeEngine,
  VclTee.Series, Vcl.StdCtrls, Vcl.ExtCtrls, VclTee.TeeProcs, VclTee.Chart,
  VclTee.BubbleCh, Math;

type
  TForm1 = class(TForm)
    Chart1: TChart;
    Button1: TButton;
    Series1: TBubbleSeries;
    Button2: TButton;
    Chart2: TChart;
    Series2: TLineSeries;
    LabeledEdit1: TLabeledEdit;
    Series3: TLineSeries;
    Label1: TLabel;
    Edit1: TEdit;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  flag, flag2: Boolean;
  a, b, c, d, h, s, v, rr, ang: Real;
  Rad, x, y, n, r, dr: Integer;
  p, p1: array [-100 .. 100, -100 .. 100] of Integer;
  g: array [0 .. 100] of Integer;
  dx: array [1 .. 4] of Integer = (
    -1,
    0,
    1,
    0
  );
  dy: array [1 .. 4] of Integer = (
    0,
    -1,
    0,
    1
  );

implementation

{$R *.dfm}

// Виводимо дані масиву на графік
procedure graph();
var
  i, j: Integer;
begin
  for i := -Rad to Rad do
    for j := -Rad to Rad do
    begin
      case p[i, j] of
        0:
          Form1.Series1.AddBubble(i, j, 0.5, '', clBlack);
        1:
          Form1.Series1.AddBubble(i, j, 0.5, '', clwhite);
        2:
          Form1.Series1.AddBubble(i, j, 0.5, '', clRed);
        3:
          Form1.Series1.AddBubble(i, j, 0.5, '', clGreen);
      end;
    end;
end;

procedure TForm1.Button1Click(Sender: TObject);
var
  i, j, k, l: Integer;
begin
  flag := True;

  Series1.Clear;
  Series2.Clear;
  Series3.Clear;

  Rad := StrToInt(LabeledEdit1.Text);
  dr := 1;

  // Завнюємо масив
  for i := -100 to 100 do
    for j := -100 to 100 do
    begin
      p[i, j] := 0;
    end;

  for i := -Rad to Rad do
    for j := -Rad to Rad do
    begin
      rr := sqrt(sqr(i) + sqr(j));
      if rr <= Rad then
        p[i, j] := 1;
    end;

  p[0, 0] := 3;

  graph();

  // Утворення кластера
  while flag do
  begin
    r := Rad;
    for l := 1 to 30 do
    begin
      ang := random(360);
      x := Trunc(Rad * cos(ang * 2 * pi / 360)); // Відкидаємо дробову частину
      y := Trunc(Rad * sin(ang * 2 * pi / 360));

      rr := sqrt(sqr(x) + sqr(y));
      if (rr <= r) and (p[x, y] <> 3) then
      begin
        p[x, y] := 2;
        Series1.AddBubble(x, y, 0.5, '', clRed);
        Application.ProcessMessages;
        flag2 := True;
      end
      else
      begin
        flag2 := False;
      end;

      while flag2 do
      begin
        p[x, y] := 1;
        Series1.AddBubble(x, y, 0.5, '', clwhite);

        case random(4) of
          1:
            x := x + 1;
          2:
            x := x - 1;
          3:
            y := y + 1;
          4:
            y := y - 1;
        end;

        rr := sqrt(sqr(x) + sqr(y));
        if (rr <= r) and (p[x, y] <> 3) then
        begin
          p[x, y] := 2;

          for k := 1 to 4 do
          begin
            if p[x + dx[k], y + dy[k]] = 3 then
              p[x, y] := 3
          end;

          case p[x, y] of
            2:
              Series1.AddBubble(x, y, 0.5, '', clRed);
            3:
              begin
                Series1.AddBubble(x, y, 0.5, '', clGreen);
                flag2 := False;
              end;
          end;

          Application.ProcessMessages;
        end
        else
          flag2 := False;
      end;
    end;

    n := 0;
    x := 0;
    y := 0;

    for i := -100 to 100 do
      for j := -100 to 100 do
        if p[i, j] = 3 then
        begin
          x := x + j;
          y := y + i;
          n := n + 1;

          for k := 1 to 4 do
          begin
            if p[x + dx[k], y + dy[k]] = 0 then
              t := 1
          end;
        end;

    x := Round(x / n);
    y := Round(y / n);

    // Завнюємо масив
    for i := -100 to 100 do
      for j := -100 to 100 do
      begin
        p1[i, j] := 0;
      end;

    Rad := Rad + t + Round(sqrt(sqr(x) + sqr(y)));
    for i := -Rad to Rad do
      for j := -Rad to Rad do
      begin
        rr := sqrt(sqr(i) + sqr(j));
        if rr <= Rad then
          p1[i, j] := 1;
      end;

    for i := -100 to 100 do
      for j := -100 to 100 do
        if p[i, j] = 3 then
        begin
          p1[i - y, j - x] := 3;
        end;

    p := p1;

    graph()
  end;

  n := 0;
  for i := -Rad to Rad do
    for j := -Rad to Rad do
      if p[i, j] = 3 then
      begin
        rr := sqrt(sqr(i) + sqr(j));
        k := Round(rr / dr) + 1;
        g[k] := g[k] + 1;

        if k > n then
          n := k;
      end;

  for k := 1 to n do
  begin
    Series2.AddXY(k, g[k]);
  end;

  // Метод найменших квадратів
  a := 0;
  b := 0;
  c := 0;
  d := 0;

  for k := 1 to n do
  begin
    a := a + k;
    b := b + g[k];
    c := c + k * k;
    d := d + k * g[k];
  end;

  h := (a * b - n * d) / (a * a - n * c);
  s := (b - h * a) / n;

  for k := 1 to n do
  begin
    v := s + h * k;
    Series3.AddXY(k, v)
  end;

  Edit1.Text := FloatToStr(k);
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
  flag := False;
end;

end.
